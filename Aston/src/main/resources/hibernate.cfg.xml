<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://46.229.212.120:5432/user_service</property>
        <property name="hibernate.connection.username">app_user</property>
        <property name="hibernate.connection.password">secret</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Show SQL in console -->
        <property name="hibernate.show_sql">true</property>

        <!-- Automatically update database schema -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- entity классы -->
        <mapping class="lesson2.User"/>
    </session-factory>
</hibernate-configuration>
